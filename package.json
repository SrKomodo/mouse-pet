{
  "name": "mouse-pet",
  "version": "1.0.1",
  "description": "A fun extension that adds a creature following your cursor",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SrKomodo/mouse-pet.git"
  },
  "author": "SrKomodo <komodosr@gmail.com>",
  "license": "MPL-2.0",
  "scripts": {
    "clean": "rimraf dist",

    "files:build": "copyfiles -u 1 src/**/* dist -e src/**/*.{ts,scss}",
    "files:watch": "watch \"copyfiles -u 1 src/**/* dist -e src/**/*.{ts,scss}\" src",

    "sass:build": "node-sass src -o dist --source-map true",
    "sass:watch": "node-sass src -o dist -w",

    "typescript:build": "tsc --sourceMap",
    "typescript:watch": "tsc -w",
    "typescript:lint": "tslint --project .",

    "web-ext:build": "web-ext build -s=dist -o",
    "web-ext:watch": "web-ext run -s=dist -f=firefoxdeveloperedition",
    "web-ext:lint": "web-ext lint -s=dist",

    "build": "run-s clean files:build sass:build typescript:lint typescript:build web-ext:lint web-ext:build",
    "watch": "run-p files:watch sass:watch typescript:watch web-ext:watch",
    "start": "yarn watch"
  },
  "dependencies": {
    "copyfiles": "^2.0.0",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "watch": "^1.0.2",
    "web-ext": "^2.6.0",
    "web-ext-types": "^2.0.1"
  }
}
