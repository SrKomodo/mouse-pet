{
  "manifest_version": 2,
  "version": "1.0.0",

  "name": "Mouse Pet",
  "description": "A fun extension that adds a flying creature following your cursor",
  "homepage_url": "https://github.com/SrKomodo/mouse-pet",
  "developer": {
    "name": "SrKomodo",
    "url": "https://github.com/SrKomodo"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"],
      "css": ["style.css"]
    }
  ],

  "web_accessible_resources": ["skins/*.png"]
}