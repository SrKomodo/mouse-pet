{
  "applications": {
    "gecko": {
      "id": "mousepet@srkomodo.com",
      "strict_min_version": "50.0"
    }
  },

  "manifest_version": 2,
  "version": "1.0.0",

  "name": "Mouse Pet",
  "description": "A fun extension that adds a creature following your cursor",
  "homepage_url": "https://github.com/SrKomodo/mouse-pet",
  "developer": {
    "name": "SrKomodo",
    "url": "https://github.com/SrKomodo"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "css": ["inject.css"]
    }
  ],

  "browser_action": {
    "browser_style": true,
    "default_title": "Mouse Pet",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": ["skins/*.png"],

  "permissions": ["storage"]
}